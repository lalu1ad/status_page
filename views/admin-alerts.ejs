<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alerts - <%= settings.site_name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: <%= settings.primary_color || '#6366f1' %>;
        }
        .sidebar {
            background: #1a1c23;
            min-height: 100vh;
            color: white;
        }
        .sidebar .nav-link {
            color: #b0b3b8;
            padding: 0.75rem 1rem;
            margin: 0.25rem 0;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: var(--primary-color);
            color: white;
        }
        .alert-critical { border-left: 4px solid #dc3545; background: #fff5f5; }
        .alert-high { border-left: 4px solid #fd7e14; background: #fffaf0; }
        .alert-warning { border-left: 4px solid #ffc107; background: #fffef0; }
        .alert-item:hover { background: #f8f9fa; cursor: pointer; }
        .alert-item .collapse.show { background: #f1f3f5; padding: 1rem; border-top: 1px solid #dee2e6; }
        .timestamp { font-size: 0.85rem; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar unchanged -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-3">
                    <h4 class="text-center mb-4"><i class="fas fa-server me-2"></i><%= settings.site_name %></h4>
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" href="/admin"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/nodes"><i class="fas fa-server me-2"></i>Nodes</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/admin/alerts"><i class="fas fa-bell me-2"></i>Alerts</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/users"><i class="fas fa-users me-2"></i>Users</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/settings"><i class="fas fa-cog me-2"></i>Settings</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/audit"><i class="fas fa-clipboard-list me-2"></i>Audit Logs</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                        <li class="nav-item mt-3"><a class="nav-link text-danger" href="/admin/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 ms-sm-auto px-4">
                <nav class="navbar navbar-light bg-white border-bottom py-3">
                    <div class="container-fluid">
                        <span class="navbar-brand"><i class="fas fa-bell me-2"></i>Alerts Management</span>
                        <div class="d-flex align-items-center">
                            <span class="me-3">Welcome, <%= user.full_name || user.username %></span>
                            <img src="<%= user.avatar || '/img/default-avatar.png' %>" alt="Avatar" class="rounded-circle" width="40" height="40">
                        </div>
                    </div>
                </nav>

                <!-- Filters -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="form-label">Status</label>
                                        <select class="form-select" id="statusFilter">
                                            <option value="all">All Alerts</option>
                                            <option value="active">Active Only</option>
                                            <option value="resolved">Resolved Only</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Severity</label>
                                        <select class="form-select" id="severityFilter">
                                            <option value="all">All Severities</option>
                                            <option value="critical">Critical</option>
                                            <option value="high">High</option>
                                            <option value="warning">Warning</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Node</label>
                                        <input type="text" class="form-control" id="nodeSearch" placeholder="Search node name...">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">&nbsp;</label>
                                        <button class="btn btn-outline-secondary w-100" id="clearFilters">
                                            <i class="fas fa-times me-2"></i>Clear Filters
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Alerts List -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-list me-2"></i>Alerts
                                    <span class="badge bg-primary ms-2" id="alertCount"><%= alerts.length %></span>
                                </h5>
                                <small class="text-muted">Last updated: <span id="lastUpdate"><%= new Date().toLocaleTimeString() %></span></small>
                            </div>
                            <div class="card-body p-0">
                                <% if (alerts.length === 0) { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-bell-slash fa-4x text-muted mb-3"></i>
                                    <h5>No Alerts Found</h5>
                                    <p class="text-muted mb-2">Everything looks good right now.</p>
                                    <small class="text-muted">Check <a href="/admin/settings">alert thresholds</a> in settings if you're expecting notifications.</small>
                                </div>
                                <% } else { %>
                                <div class="list-group list-group-flush" id="alertsList">
                                    <% alerts.forEach(function(alert) { %>
                                    <div class="list-group-item alert-item <%= alert.severity === 'critical' ? 'alert-critical' : alert.severity === 'high' ? 'alert-high' : 'alert-warning' %>"
                                         data-status="<%= alert.resolved ? 'resolved' : 'active' %>"
                                         data-severity="<%= alert.severity %>"
                                         data-type="<%= alert.type %>"
                                         data-node="<%= (alert.node_name || '').toLowerCase() %>"
                                         data-id="<%= alert.id %>">
                                        <div class="row align-items-center">
                                            <div class="col-md-1 text-center">
                                                <i class="fas fa-<%= alert.severity === 'critical' ? 'skull-crossbones' : alert.severity === 'high' ? 'exclamation-circle' : 'exclamation-triangle' %> fa-2x <%= alert.severity === 'critical' ? 'text-danger' : alert.severity === 'high' ? 'text-warning' : 'text-info' %>"></i>
                                            </div>
                                            <div class="col-md-7">
                                                <h6 class="mb-1 d-flex align-items-center">
                                                    <%= alert.node_name || 'Unknown Node' %>
                                                    <span class="badge ms-2 bg-<%= alert.severity === 'critical' ? 'danger' : alert.severity === 'high' ? 'warning' : 'info' %>">
                                                        <%= alert.severity.toUpperCase() %>
                                                    </span>
                                                    <% if (alert.resolved) { %>
                                                        <span class="badge bg-success ms-2"><i class="fas fa-check me-1"></i>Resolved</span>
                                                    <% } %>
                                                </h6>
                                                <p class="mb-1 fw-bold"><%= alert.message %></p>
                                                <small class="text-muted timestamp" data-timestamp="<%= alert.created_at %>">
                                                    <%= new Date(alert.created_at).toLocaleString() %>
                                                </small>
                                                <% if (alert.resolved_at) { %>
                                                    <small class="text-muted ms-2">â€¢ Resolved <span data-timestamp="<%= alert.resolved_at %>"><%= new Date(alert.resolved_at).toLocaleString() %></span></small>
                                                <% } %>
                                            </div>
                                            <div class="col-md-2 text-center">
                                                <span class="badge bg-secondary"><%= alert.type.replace('_', ' ').toUpperCase() %></span>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <% if (!alert.resolved) { %>
                                                <button class="btn btn-success btn-sm resolve-alert" data-id="<%= alert.id %>">
                                                    <i class="fas fa-check me-1"></i>Resolve
                                                </button>
                                                <% } else { %>
                                                <span class="text-success small"><i class="fas fa-check-circle me-1"></i>Resolved</span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 id="totalAlerts"><%= alerts.length %></h4>
                                        <p class="mb-0">Total Alerts</p>
                                    </div>
                                    <i class="fas fa-bell fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 id="activeAlerts"><%= alerts.filter(a => !a.resolved).length %></h4>
                                        <p class="mb-0">Active Alerts</p>
                                    </div>
                                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 id="criticalAlerts"><%= alerts.filter(a => a.severity === 'critical' && !a.resolved).length %></h4>
                                        <p class="mb-0">Critical</p>
                                    </div>
                                    <i class="fas fa-skull-crossbones fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 id="resolvedAlerts"><%= alerts.filter(a => a.resolved).length %></h4>
                                        <p class="mb-0">Resolved</p>
                                    </div>
                                    <i class="fas fa-check-circle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // WebSocket for live updates
        const wsProtocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
        const ws = new WebSocket(wsProtocol + '//' + window.location.host);

        ws.onmessage = (event) => {
            const data = JSON.parse(event.data);
            if (data.type === 'new_alert') {
                addNewAlert(data.alert);
            } else if (data.type === 'alert_resolved') {
                updateResolvedAlert(data.alertId);
            }
        };

        function addNewAlert(alert) {
            const list = document.getElementById('alertsList');
            if (!list) return;

            const item = document.createElement('div');
            item.className = `list-group-item alert-item alert-${alert.severity} new-alert`;
            item.dataset.status = 'active';
            item.dataset.severity = alert.severity;
            item.dataset.type = alert.type;
            item.dataset.node = (alert.node_name || '').toLowerCase();
            item.dataset.id = alert.id;

            item.innerHTML = `
                <div class="row align-items-center">
                    <div class="col-md-1 text-center">
                        <i class="fas fa-${alert.severity === 'critical' ? 'skull-crossbones' : alert.severity === 'high' ? 'exclamation-circle' : 'exclamation-triangle'} fa-2x ${alert.severity === 'critical' ? 'text-danger' : alert.severity === 'high' ? 'text-warning' : 'text-info'}"></i>
                    </div>
                    <div class="col-md-7">
                        <h6 class="mb-1 d-flex align-items-center">
                            ${alert.node_name || 'Unknown Node'}
                            <span class="badge ms-2 bg-${alert.severity === 'critical' ? 'danger' : alert.severity === 'high' ? 'warning' : 'info'}">
                                ${alert.severity.toUpperCase()}
                            </span>
                        </h6>
                        <p class="mb-1 fw-bold">${alert.message}</p>
                        <small class="text-muted timestamp" data-timestamp="${alert.created_at}">
                            ${new Date(alert.created_at).toLocaleString()}
                        </small>
                    </div>
                    <div class="col-md-2 text-center">
                        <span class="badge bg-secondary">${alert.type.replace('_', ' ').toUpperCase()}</span>
                    </div>
                    <div class="col-md-2 text-end">
                        <button class="btn btn-success btn-sm resolve-alert" data-id="${alert.id}">
                            <i class="fas fa-check me-1"></i>Resolve
                        </button>
                    </div>
                </div>
            `;

            list.prepend(item);
            updateCounters();
            updateTimestamps();
            attachResolveListeners();
        }

        function updateResolvedAlert(alertId) {
            const item = document.querySelector(`.alert-item[data-id="${alertId}"]`);
            if (item) {
                item.dataset.status = 'resolved';
                item.querySelector('.resolve-alert')?.remove();
                const actions = item.querySelector('.col-md-2.text-end');
                actions.innerHTML = '<span class="text-success small"><i class="fas fa-check-circle me-1"></i>Resolved</span>';
                updateCounters();
            }
        }

        function updateCounters() {
            const items = document.querySelectorAll('.alert-item[style*="block"], .alert-item:not([style*="none"])');
            let total = 0, active = 0, critical = 0, resolved = 0;
            items.forEach(i => {
                total++;
                if (i.dataset.status === 'active') active++;
                if (i.dataset.severity === 'critical' && i.dataset.status === 'active') critical++;
                if (i.dataset.status === 'resolved') resolved++;
            });
            document.getElementById('alertCount').textContent = total;
            document.getElementById('totalAlerts').textContent = total;
            document.getElementById('activeAlerts').textContent = active;
            document.getElementById('criticalAlerts').textContent = critical;
            document.getElementById('resolvedAlerts').textContent = resolved;
            document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString();
        }

        function updateTimestamps() {
            document.querySelectorAll('.timestamp[data-timestamp]').forEach(el => {
                const ts = new Date(el.dataset.timestamp);
                const diff = Date.now() - ts;
                let text = ts.toLocaleString();
                if (diff < 60000) text = 'just now';
                else if (diff < 3600000) text = Math.round(diff/60000) + ' min ago';
                else if (diff < 86400000) text = Math.round(diff/3600000) + ' hr ago';
                el.textContent = text;
            });
        }

        // Filters (enhanced with node search)
        function filterAlerts() {
            const status = document.getElementById('statusFilter').value;
            const severity = document.getElementById('severityFilter').value;
            const nodeTerm = document.getElementById('nodeSearch').value.toLowerCase().trim();

            document.querySelectorAll('.alert-item').forEach(item => {
                const matchStatus = status === 'all' || item.dataset.status === status;
                const matchSeverity = severity === 'all' || item.dataset.severity === severity;
                const matchNode = !nodeTerm || item.dataset.node.includes(nodeTerm);
                item.style.display = matchStatus && matchSeverity && matchNode ? '' : 'none';
            });
            updateCounters();
        }

        document.getElementById('statusFilter').addEventListener('change', filterAlerts);
        document.getElementById('severityFilter').addEventListener('change', filterAlerts);
        document.getElementById('nodeSearch').addEventListener('input', filterAlerts);
        document.getElementById('clearFilters').addEventListener('click', () => {
            document.getElementById('statusFilter').value = 'all';
            document.getElementById('severityFilter').value = 'all';
            document.getElementById('nodeSearch').value = '';
            filterAlerts();
        });

        // Resolve buttons
        function attachResolveListeners() {
            document.querySelectorAll('.resolve-alert').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.dataset.id;
                    this.disabled = true;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Resolving...';
                    if (confirm('Resolve this alert?')) {
                        fetch(`/admin/alerts/resolve/${id}`, { method: 'POST' })
                            .then(r => r.json())
                            .then(data => {
                                if (data.success) {
                                    updateResolvedAlert(id);
                                } else {
                                    alert('Failed: ' + (data.error || 'Unknown'));
                                }
                            })
                            .catch(() => alert('Network error'))
                            .finally(() => {
                                this.disabled = false;
                                this.innerHTML = '<i class="fas fa-check me-1"></i>Resolve';
                            });
                    } else {
                        this.disabled = false;
                        this.innerHTML = '<i class="fas fa-check me-1"></i>Resolve';
                    }
                });
            });
        }
        attachResolveListeners();

        // Initial setup
        updateTimestamps();
        setInterval(updateTimestamps, 30000);
        filterAlerts();
    </script>
</body>
</html>