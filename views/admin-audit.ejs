<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audit Logs - <%= settings.site_name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: <%= settings.primary_color || '#6366f1' %>;
        }
        .sidebar {
            background: #1a1c23;
            min-height: 100vh;
            color: white;
        }
        .sidebar .nav-link {
            color: #b0b3b8;
            padding: 0.75rem 1rem;
            margin: 0.25rem 0;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: var(--primary-color);
            color: white;
        }
        .audit-log { 
            border-left: 4px solid var(--primary-color); 
            transition: all 0.2s;
        }
        .audit-log:hover { background: #f8f9fa; }
        .details-pre { 
            white-space: pre-wrap; 
            word-break: break-all; 
            max-height: 120px; 
            overflow: auto; 
            background: #f1f3f5; 
            padding: 0.75rem; 
            border-radius: 4px; 
        }
        .badge-action-login { background: #28a745; }
        .badge-action-logout { background: #6c757d; }
        .badge-action-create { background: #17a2b8; }
        .badge-action-update { background: #ffc107; }
        .badge-action-delete { background: #dc3545; }
        .badge-action-other { background: #6f42c1; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar unchanged -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-3">
                    <h4 class="text-center mb-4"><i class="fas fa-server me-2"></i><%= settings.site_name %></h4>
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" href="/admin"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/nodes"><i class="fas fa-server me-2"></i>Nodes</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/alerts"><i class="fas fa-bell me-2"></i>Alerts</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/users"><i class="fas fa-users me-2"></i>Users</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/settings"><i class="fas fa-cog me-2"></i>Settings</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/admin/audit"><i class="fas fa-clipboard-list me-2"></i>Audit Logs</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                        <li class="nav-item mt-3"><a class="nav-link text-danger" href="/admin/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 ms-sm-auto px-4">
                <nav class="navbar navbar-light bg-white border-bottom py-3">
                    <div class="container-fluid">
                        <span class="navbar-brand"><i class="fas fa-clipboard-list me-2"></i>Audit Logs</span>
                        <div class="d-flex align-items-center">
                            <span class="me-3">Welcome, <%= user.full_name || user.username %></span>
                            <img src="<%= user.avatar || '/img/default-avatar.png' %>" alt="Avatar" class="rounded-circle" width="40" height="40">
                        </div>
                    </div>
                </nav>

                <!-- Search & Filter -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                    <input type="text" id="auditSearch" class="form-control" placeholder="Search by user, action, IP, details...">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Audit Logs -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-history me-2"></i>System Audit Trail
                                    <span class="badge bg-primary ms-2" id="logCount"><%= logs.length %></span>
                                </h5>
                                <small class="text-muted">Showing all system actions and changes</small>
                            </div>
                            <div class="card-body p-0">
                                <% if (logs.length === 0) { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
                                    <h5>No Audit Logs Yet</h5>
                                    <p class="text-muted">User actions, logins, node changes, etc. will appear here once activity occurs.</p>
                                    <small class="text-muted">Audit logging is always enabled.</small>
                                </div>
                                <% } else { %>
                                <div class="list-group list-group-flush" id="auditList">
                                    <% logs.forEach(function(log) { %>
                                    <div class="list-group-item audit-log log-item"
                                         data-user="<%= (log.username || 'system').toLowerCase() %>"
                                         data-action="<%= log.action.toLowerCase() %>"
                                         data-ip="<%= (log.ip_address || '').toLowerCase() %>"
                                         data-details="<%= (log.details || '').toLowerCase() %>">
                                        <div class="row align-items-center">
                                            <div class="col-md-2">
                                                <strong><%= log.username || '<span class="text-muted">System</span>' %></strong>
                                                <br>
                                                <small class="text-muted timestamp" data-timestamp="<%= log.created_at %>">
                                                    <%= new Date(log.created_at).toLocaleString() %>
                                                </small>
                                            </div>
                                            <div class="col-md-2">
                                                <span class="badge badge-action-<%= 
                                                    log.action.includes('login') ? 'login' : 
                                                    log.action.includes('logout') ? 'logout' :
                                                    log.action.includes('create') ? 'create' :
                                                    log.action.includes('update') ? 'update' :
                                                    log.action.includes('delete') ? 'delete' : 'other' 
                                                %>">
                                                    <%= log.action.replace(/_/g, ' ').toUpperCase() %>
                                                </span>
                                            </div>
                                            <div class="col-md-5">
                                                <div class="details-pre">
                                                    <% if (log.details) { 
                                                        try {
                                                            const details = JSON.parse(log.details);
                                                            %>
                                                            <pre><%= JSON.stringify(details, null, 2) %></pre>
                                                            <% 
                                                        } catch (e) { %>
                                                            <%= log.details %>
                                                        <% } 
                                                    } else { %>
                                                        <span class="text-muted">No additional details</span>
                                                    <% } %>
                                                </div>
                                            </div>
                                            <div class="col-md-3 text-end">
                                                <% if (log.ip_address) { %>
                                                <small class="text-muted">
                                                    <i class="fas fa-network-wired me-1"></i>
                                                    <%= log.ip_address %>
                                                </small>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistics Cards -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h4 id="totalLogs"><%= logs.length %></h4>
                                <p class="mb-0">Total Entries</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h4 id="loginCount"><%= logs.filter(l => l.action.includes('login')).length %></h4>
                                <p class="mb-0">Logins</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h4 id="changeCount"><%= logs.filter(l => l.action.includes('create') || l.action.includes('update') || l.action.includes('delete')).length %></h4>
                                <p class="mb-0">Changes</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger text-white">
                            <div class="card-body text-center">
                                <h4 id="deleteCount"><%= logs.filter(l => l.action.includes('delete')).length %></h4>
                                <p class="mb-0">Deletions</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Relative timestamps
        function updateTimestamps() {
            document.querySelectorAll('.timestamp[data-timestamp]').forEach(el => {
                if (!el.dataset.timestamp) return;
                const ts = new Date(el.dataset.timestamp);
                const diff = Date.now() - ts.getTime();
                let text = ts.toLocaleString();
                if (diff < 60000) text = 'just now';
                else if (diff < 3600000) text = Math.round(diff/60000) + ' min ago';
                else if (diff < 86400000) text = Math.round(diff/3600000) + ' hr ago';
                else text = ts.toLocaleDateString();
                el.textContent = text;
            });
        }
        updateTimestamps();
        setInterval(updateTimestamps, 30000);

        // Client-side search/filter
        document.getElementById('auditSearch').addEventListener('input', function() {
            const term = this.value.toLowerCase().trim();
            let visible = 0;
            document.querySelectorAll('.log-item').forEach(item => {
                const match = 
                    item.dataset.user.includes(term) ||
                    item.dataset.action.includes(term) ||
                    item.dataset.ip.includes(term) ||
                    item.dataset.details.includes(term);
                item.style.display = match ? '' : 'none';
                if (match) visible++;
            });
            document.getElementById('logCount').textContent = visible;
            document.getElementById('totalLogs').textContent = visible;
        });

        // Initial setup
        updateTimestamps();
    </script>
</body>
</html>