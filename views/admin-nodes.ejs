<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodes Management - <%= settings.site_name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: <%= settings.primary_color || '#6366f1' %>;
        }
        .sidebar {
            background: #1a1c23;
            min-height: 100vh;
            color: white;
        }
        .sidebar .nav-link {
            color: #b0b3b8;
            padding: 0.75rem 1rem;
            margin: 0.25rem 0;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: var(--primary-color);
            color: white;
        }
        .status-online { color: #28a745; }
        .status-offline { color: #dc3545; }
        .badge-group { background: var(--primary-color); }
        .pulse-online {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.4; }
            100% { opacity: 1; }
        }
        .api-key-masked { user-select: none; }
        .api-key-visible { user-select: text; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (unchanged) -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-3">
                    <h4 class="text-center mb-4">
                        <i class="fas fa-server me-2"></i><%= settings.site_name %>
                    </h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/nodes">
                                <i class="fas fa-server me-2"></i>Nodes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/alerts">
                                <i class="fas fa-bell me-2"></i>Alerts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/users">
                                <i class="fas fa-users me-2"></i>Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/settings">
                                <i class="fas fa-cog me-2"></i>Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/audit">
                                <i class="fas fa-clipboard-list me-2"></i>Audit Logs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/profile">
                                <i class="fas fa-user me-2"></i>Profile
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a class="nav-link text-danger" href="/admin/logout">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 ms-sm-auto px-4">
                <nav class="navbar navbar-light bg-white border-bottom py-3">
                    <div class="container-fluid">
                        <span class="navbar-brand">
                            <i class="fas fa-server me-2"></i>Nodes Management
                        </span>
                        <div class="d-flex align-items-center">
                            <span class="me-3">Welcome, <%= user.full_name || user.username %></span>
                            <img src="<%= user.avatar || '/img/default-avatar.png' %>" alt="Avatar" class="rounded-circle" width="40" height="40">
                        </div>
                    </div>
                </nav>

                <!-- Header with search -->
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mt-4 mb-3 gap-3">
                    <h4 class="mb-0">All Nodes (<%= nodes.length %>)</h4>
                    <div class="d-flex gap-3 flex-grow-1 flex-md-grow-0">
                        <div class="input-group" style="max-width: 350px;">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" id="nodeSearch" class="form-control" placeholder="Search by name, hostname, location, tags...">
                        </div>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addNodeModal">
                            <i class="fas fa-plus me-2"></i>Add Node
                        </button>
                    </div>
                </div>

                <!-- Nodes Table -->
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="nodesTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Status</th>
                                        <th>Location</th>
                                        <th>Groups</th>
                                        <th>Last Seen</th>
                                        <th>Alerts</th>
                                        <th>API Key</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% nodes.forEach(function(node) { %>
                                    <tr class="node-row" data-name="<%= node.name.toLowerCase() %>" 
                                        data-hostname="<%= (node.hostname || '').toLowerCase() %>"
                                        data-location="<%= (node.location || 'unknown').toLowerCase() %>"
                                        data-tags="<%= (node.group_tags || []).join(',').toLowerCase() %>">
                                        <td>
                                            <strong><%= node.name %></strong>
                                            <% if (node.hostname) { %>
                                                <br><small class="text-muted"><%= node.hostname %></small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (node.is_online) { %>
                                                <span class="status-online">
                                                    <i class="fas fa-circle me-1 pulse-online"></i>Online
                                                </span>
                                            <% } else { %>
                                                <span class="status-offline">
                                                    <i class="fas fa-circle me-1"></i>Offline
                                                </span>
                                            <% } %>
                                        </td>
                                        <td><%= node.location || 'Unknown' %></td>
                                        <td>
                                            <% if (node.group_tags && node.group_tags.length > 0) { %>
                                                <% 
                                                    const tags = node.group_tags;
                                                    const displayTags = tags.slice(0, 2);
                                                    const more = tags.length > 2 ? tags.length - 2 : 0;
                                                %>
                                                <% displayTags.forEach(function(tag) { %>
                                                    <span class="badge badge-group me-1"><%= tag.trim() %></span>
                                                <% }); %>
                                                <% if (more > 0) { %>
                                                    <span class="badge bg-secondary me-1">+<%= more %> more</span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">None</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (node.last_seen) { %>
                                                <small class="last-seen" data-timestamp="<%= node.last_seen %>">
                                                    <%= new Date(node.last_seen).toLocaleString() %>
                                                </small>
                                            <% } else { %>
                                                <span class="text-muted">Never</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (node.active_alerts > 0) { %>
                                                <span class="badge bg-danger"><%= node.active_alerts %></span>
                                            <% } else { %>
                                                <span class="badge bg-success">0</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <code class="api-key-masked small mb-0" title="Click to reveal">
                                                    <%= node.api_key_masked %>
                                                </code>
                                                <button class="btn btn-sm btn-outline-secondary toggle-key" title="Show/Hide API Key">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/admin/nodes/view/<%= node.id %>" class="btn btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/admin/nodes/edit/<%= node.id %>" class="btn btn-outline-secondary" title="Edit Node">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <% if (user.role === 'admin') { %>
                                                <button class="btn btn-outline-danger delete-node" 
                                                        data-id="<%= node.id %>" 
                                                        data-name="<%= node.name %>" 
                                                        title="Delete Node">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                    
                                    <% if (nodes.length === 0) { %>
                                    <tr>
                                        <td colspan="8" class="text-center text-muted py-5">
                                            <i class="fas fa-server fa-4x mb-3 text-secondary"></i>
                                            <h5>No nodes registered yet</h5>
                                            <p class="mb-2">Add a node manually or run the agent with the generated API key.</p>
                                            <small class="text-muted">Check Settings → Monitoring for agent installation instructions.</small>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="8">
                                            <small class="text-muted">
                                                Total: <strong><%= nodes.length %></strong> • 
                                                Online: <strong class="status-online"><%= nodes.filter(n => n.is_online).length %></strong> • 
                                                Offline: <strong class="status-offline"><%= nodes.filter(n => !n.is_online).length %></strong> • 
                                                With Alerts: <strong class="text-danger"><%= nodes.filter(n => n.active_alerts > 0).length %></strong>
                                            </small>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Node Modal (unchanged except placeholder improvement) -->
    <div class="modal fade" id="addNodeModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Node</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/nodes/add">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Node Name *</label>
                            <input type="text" class="form-control" name="name" required placeholder="e.g. prod-web-01">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Hostname</label>
                            <input type="text" class="form-control" name="hostname" placeholder="web01.example.com">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">IP Alias / Friendly IP</label>
                            <input type="text" class="form-control" name="ip_alias" placeholder="Optional">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Location</label>
                            <input type="text" class="form-control" name="location" value="Unknown" placeholder="e.g. Frankfurt, AWS eu-central-1">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Group Tags (comma separated)</label>
                            <input type="text" class="form-control" name="group_tags" placeholder="web, production, eu-central">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="public" id="publicCheck" checked>
                                    <label class="form-check-label" for="publicCheck">Public (visible via API)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="status_page_visible" id="statusCheck" checked>
                                    <label class="form-check-label" for="statusCheck">Show on Public Status Page</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Node</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 1. Delete confirmation
        document.querySelectorAll('.delete-node').forEach(btn => {
            btn.addEventListener('click', function() {
                const nodeId = this.dataset.id;
                const nodeName = this.dataset.name;
                if (confirm(`Delete node "${nodeName}"?\nThis cannot be undone.`)) {
                    fetch(`/admin/nodes/delete/${nodeId}`, { method: 'POST' })
                        .then(r => r.json())
                        .then(data => {
                            if (data.success) location.reload();
                            else alert('Delete failed: ' + (data.error || 'Unknown error'));
                        })
                        .catch(() => alert('Network error while deleting'));
                }
            });
        });

        // 2. API Key toggle
        document.querySelectorAll('.toggle-key').forEach(btn => {
            btn.addEventListener('click', function() {
                const codeEl = this.previousElementSibling;
                if (codeEl.classList.contains('api-key-masked')) {
                    codeEl.textContent = '<%= nodes.map(n => n.api_key).join('|') %>'.split('|')[Array.from(document.querySelectorAll('.toggle-key')).indexOf(this)];
                    codeEl.classList.remove('api-key-masked');
                    codeEl.classList.add('api-key-visible');
                    this.innerHTML = '<i class="fas fa-eye-slash"></i>';
                } else {
                    codeEl.textContent = '<%= nodes.map(n => n.api_key_masked).join('|') %>'.split('|')[Array.from(document.querySelectorAll('.toggle-key')).indexOf(this)];
                    codeEl.classList.add('api-key-masked');
                    codeEl.classList.remove('api-key-visible');
                    this.innerHTML = '<i class="fas fa-eye"></i>';
                }
            });
        });

        // 3. Relative time for last seen
        function updateRelativeTimes() {
            document.querySelectorAll('.last-seen[data-timestamp]').forEach(el => {
                const ts = new Date(el.dataset.timestamp);
                const diff = Date.now() - ts;
                let text = '';
                if (diff < 60000) text = 'just now';
                else if (diff < 3600000) text = Math.floor(diff/60000) + ' min ago';
                else if (diff < 86400000) text = Math.floor(diff/3600000) + ' hr ago';
                else text = ts.toLocaleDateString();
                el.textContent = text;
            });
        }
        updateRelativeTimes();
        setInterval(updateRelativeTimes, 60000); // update every minute

        // 4. Client-side search/filter
        const searchInput = document.getElementById('nodeSearch');
        searchInput.addEventListener('input', function() {
            const term = this.value.toLowerCase().trim();
            document.querySelectorAll('.node-row').forEach(row => {
                const match = 
                    row.dataset.name.includes(term) ||
                    row.dataset.hostname.includes(term) ||
                    row.dataset.location.includes(term) ||
                    row.dataset.tags.includes(term);
                row.style.display = match ? '' : 'none';
            });
        });
    </script>
</body>
</html>